# Dunst notification daemon configuration
# Optimized for minimal resource usage and volume OSD

[global]
    # Display
    monitor = 0
    follow = mouse
    
    # Geometry
    width = 300
    height = 80
    origin = top-right
    offset = 10x50
    
    # Transparency (0-100)
    transparency = 10
    
    # Font
    font = DejaVu Sans Mono 10
    
    # Text
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    
    # Icons
    icon_position = left
    max_icon_size = 32
    
    # Progress bar (for volume)
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    
    # History
    sticky_history = yes
    history_length = 20
    
    # Misc
    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 5
    ignore_dbusclose = false
    
    # Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[urgency_low]
    # Low priority notifications (info)
    background = "#1C1B19"
    foreground = "#BAA67F"
    frame_color = "#504945"
    timeout = 2
    
[urgency_normal]
    # Normal notifications (volume OSD, etc)
    background = "#1C1B19"
    foreground = "#BAA67F"
    frame_color = "#918175"
    timeout = 3
    
[urgency_critical]
    # Critical notifications (errors, warnings)
    background = "#1C1B19"
    foreground = "#FBB829"
    frame_color = "#EF2F27"
    timeout = 0
    
# Volume notification stacking rule
[volume]
    appname = notify-send
    summary = "Volume"
    set_stack_tag = volume
    timeout = 1
